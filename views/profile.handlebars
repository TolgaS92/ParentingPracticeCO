<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    <span>{{name}}</span>
                    <span>{{lastName}}</span>
                </div>
                <div class="card-body">
                    {{email}}
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    <span>{{first_name}}</span>
                    <span>{{last_name}}</span>
                </div>
                <div class="card-body">
                    {{child.child_age}}
                </div>
            </div>
        </div>

    </div>
</div>
<div class="container mt-5">
    <a class="list-group btn btn-danger" data-toggle="collapse" href="#collapseExample" role="button"
        aria-expanded="false" aria-controls="collapseExample">
        <span class="float-left">{{logged_name}}</span>
    </a>
    <div class="collapse mb-3" id="collapseExample">
        <div class="card dashboard-card">
            <div class="list-item">
                <div class="card-header">
                    <span>{{child.last_name}}</span>
                    <span class="float-right">Posted by: {{logged_name}}</span>
                </div>
                <div class="card-body content-card">
                    {{child.child_age}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <a type="button" class="btn btn-dark" href="/profile/newchild">+ Child</a>
    </div>
</div>