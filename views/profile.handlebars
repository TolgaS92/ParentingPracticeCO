<div class="jumbotron jumbotron-fluid navbar-light bg-active animate__animated animate__zoomIn">
    <div class="container">
        <h3 class="display-4 text-center">Parent name: {{user.name}} {{user.lastName}}</h3>
        <h6 class="text-center">Email: {{user.email}}</h6>
    </div>
</div>
<div class="container animate__animated animate__zoomIn">
    <div class="row text-center mt-5 mb-5">
        <a class="text-decoration-none" href="https://calendly.com/parentingpracticeco/introduction" target="_blank">
            <span class="schedule-btn btn-hvr">SCHEDULE A CALL</span>
        </a>
    </div>
</div>

<div class="container animate__animated animate__zoomIn">
    <div class="justify-content-center row">
        {{#each user.children as |child|}}
        <div class="card col-sm-4 mr-3 bg-light text-dark" style="width: 18rem;">
            <img src="/images/Helping-babies-sleep.jpg" class="card-img-top mt-1" alt="babypic">
            <div class="card-body">
                <h5 class="card-title text-center">{{child.first_name}} {{child.last_name}}</h5>
                <p class="card-text text-center">Child Age: {{child.child_age}}</p>
                <a href="/childprofile/{{id}}" class="btn btn-primary d-flex justify-content-center">Sleep Chart</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div class="container mt-5 animate__animated animate__zoomIn">
    <div class="d-flex justify-content-center">
        <a type="button" class="btn btn-dark" href="/profile/newchild">+ Child</a>
    </div>
</div>