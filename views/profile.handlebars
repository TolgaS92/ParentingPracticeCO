<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header text-center">
                    <span class="text-muted text-decoration-none">{{user.name}}</span>
                    <span class="text-muted text-decoration-none">{{user.lastName}}</span>
                </div>
                <div class="card-body text-center text-decoration-none">
                    {{user.email}}
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                {{#each user.children as |child|}}
                <div class="card-header text-center">
                    <span class="text-muted text-decoration-none">{{child.first_name}}</span>
                    <span class="text-muted text-decoration-none">{{child.last_name}}</span>
                </div>
                <div class="card-body text-center text-decoration-none">
                    {{child.child_age}}
                </div>
                <a class="btn btn-danger" href="/childprofile/{{id}}">
                    <span class="float-left">Sleep Chart</span>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <a type="button" class="btn btn-dark" href="/profile/newchild">+ Child</a>
    </div>
</div>