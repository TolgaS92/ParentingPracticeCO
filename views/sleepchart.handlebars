<div class="d-flex justify-content-center">
  <div class="row">
    <div class="col-12">
      <form class="form sleepchart-form" method="POST" action="/api/sleepchart">
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">Wake up time(am):</label>
          <input class="col-5 form-input" name="am_wake_time" type="text" id="amWakeup" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">First Nap: </label>
          <input class="col-5 form-input" name="nap1" type="text" id="firstNap" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">1st Nap in bed (total):</label>
          <input class="col-5 form-input" name="nap_time_in_bed" type="text" id="bedTime" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">1st Nap asleep:</label>
          <input class="col-5 form-input" name="nap_time_asleep" type="text" id="sleepTime" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">1st Nap awake:</label>
          <input class="col-5 form-input" name="nap_time_awake" type="text" id="awakeTime" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">Total 1st Nap:</label>
          <input class="col-5 form-input" name="nap_total_duration" type="text" id="napDuration" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">Bed Time :</label>
          <input class="col-5 form-input" name="bedtime" type="text" id="bedtime" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">Bed time in bed:</label>
          <input class="col-5 form-input" name="bed_time_time_in_bed" type="text" id="timeInBed" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">Bed time asleep:</label>
          <input class="col-5 form-input" name="bedtime_time_asleep" type="text" id="timeAsleep" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">Bed time awake:</label>
          <input class="col-5 form-input" name="bedtime_time_awake" type="text" id="timeAwake" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">Bed time (total):</label>
          <input class="col-5 form-input" name="bedtime_total_duration" type="text" id="bedtimeDuration" />
        </div>
        <div class="form-group">
          <label class="col-6 form-label" for="sleepchart">Number of Feedings:</label>
          <input class="col-5 form-input" name="feed" type="text" id="feedings" />
        </div>
        <div class="d-flex justify-content-center form-group mt-3">
          <button class="btn btn-primary" type="submit">Submit Form</button>
        </div>
      </form>
    </div>
  </div>
</div>
