<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form" id="login">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">First Name:</label>
        <input class="form-input" type="text" id="firstName-signup" />
      </div>
       <div class="form-group">
        <label for="name-signup">Last Name:</label>
        <input class="form-input" type="text" id="lastName-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Phone:</label>
        <input class="form-input" type="text" id="phone-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<head> <link src="stylesheet" href="public/css/style.css"> </head>
<script src="./public/js/login.js"></script>