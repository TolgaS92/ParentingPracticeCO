<div class="row">
  <div class="login col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="email-block form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="password-block form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="login-btn" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="sign-up col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name">First Name:</label>
        <input class="firstname-block form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="lastName">Last Name:</label>
        <input class="lastname-block form-input" type="text" id="lastname-signup" />
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input class="signin-email-block form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input class="signin-password-block form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="signup-btn" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>
<script src="./js/signup.js"></script>